.container
  .row
    .col-md-12.text-center
      %h2
        = @topic.title
      %br
      %br
      = @topic.initial_post
      %br
      %br
      = link_to "Edit", edit_topic_path(@topic, @post)
      |
      = link_to "Delete", topic_path(@topic), method: :delete
      |
      = link_to "Home", root_path

.container
  .row      
    = link_to "Join the Conversation! Add a Post", new_topic_post_path(@topic)
    %br
    - @posts.each do |post|
      .col-md-4
        = post.title
        = post.content
        %br
        = link_to "Edit", edit_topic_post_path(@topic, post)
        = link_to "Delete", topic_post_path(@topic, post), method: :delete

